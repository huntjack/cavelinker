version: '1.0'
services:
  postgresql:
    image: postgres:bullseye
    restart: always
    ports:
      - 5432:5432
    environment:
      - POSTGRES_DB=cavelinker_database
      - PGUSER=postgres
      - POSTGRES_PASSWORD=password
      - PGPASSWORD=password
  cavelinkerserver:
    image: tomee:9.0.0-M8-jre11-ubuntu-plume
    restart: always
    ports:
      - 8888:8080


